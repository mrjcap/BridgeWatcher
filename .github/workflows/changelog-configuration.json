{
  "template": "## [#{{TO_TAG}}] - #{{TO_TAG_DATE}}\n\n#{{CHANGELOG}}\n\n---\n",
  "categories": [
    {
      "title": "### 🚀 Νέα χαρακτηριστικά",
      "labels": ["feature", "enhancement", "feat", "προστέθηκε", "προσθήκη"]
    },
    {
      "title": "### 🐛 Διορθώσεις",
      "labels": ["bug", "fix", "bugfix", "διόρθωση", "διορθώθηκε"]
    },
    {
      "title": "### 🧰 Αναδιοργάνωση/Καθαρισμός",
      "labels": ["refactor", "cleanup", "chore", "καθαρισμός", "αναδιοργάνωση"]
    },
    {
      "title": "### 🧪 Τεστ & CI",
      "labels": ["test", "tests", "ci", "δοκιμές"]
    },
    {
      "title": "### 📝 Τεκμηρίωση",
      "labels": ["docs", "documentation", "readme", "τεκμηρίωση"]
    },
    {
      "title": "### 📦 Εξαρτήσεις",
      "labels": ["dependencies", "dependabot", "εξαρτήσεις"]
    }
  ],
  "ignore_labels": [
    "wip", "invalid", "ignore", "πρόχειρο", "αγνόησε"
  ],
  "sort": {
    "order": "DESC",
    "on_property": "mergedAt"
  },
  "pr_template": "- #{{TITLE}} ([#{{NUMBER}}]({{URL}})) από @#{{AUTHOR}}",
  "empty_template": "- Καμία σημαντική αλλαγή σε αυτή την έκδοση 🎉",
  "max_tags_to_fetch": 50
}

